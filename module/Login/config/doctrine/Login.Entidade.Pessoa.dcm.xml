<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Login\Entidade\Pessoa" table="pessoa" repository-class="Login\Repository\PessoaRepository">>
        <id name="cd_pessoa" type="integer" column="cd_pessoa">
            <generator strategy="AUTO"/>
        </id>
        <field name="ds_nome" type="string" column="ds_nome" length="255"/>
        <field name="ds_login" type="string" column="ds_login" length="255"/>
        <field name="ds_senha" type="string" column="ds_senha" length="255"/>
    </entity>

</doctrine-mapping>